#include <stdio.h>

int main() {
    int mat1[10][10], mat2[10][10], sum[10][10];
    int rows, cols, i, j;

    printf("Enter number of 1st rows and colums : ");
    scanf("%d %d", &rows, &cols);
    
    
 printf("Enter number of 2nd rows and colums : ");
    scanf("%d %d", &rows, &cols);
   
    printf("Enter elements of first matrix (%dx%d):\n", rows, cols);
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            scanf("%d", &mat1[i][j]);
        }
    }

    printf("Enter elements of second matrix (%dx%d):\n", rows, cols);
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            scanf("%d", &mat2[i][j]);
        }
    }

    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            sum[i][j] = mat1[i][j] + mat2[i][j];
        }
    }

    printf("\nSum of both matrices:\n");
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            printf("%d ", sum[i][j]);
        }
        printf("\n");
    }

    return 0;
}


             OR

#include <stdio.h>

int main() {
    int mat1[10][10], mat2[10][10], sum[10][10];
    int r1, c1, r2, c2, i, j;

    // Input size of first matrix
    printf("Enter number of rows and columns of first matrix: ");
    scanf("%d %d", &r1, &c1);

    // Input size of second matrix
    printf("Enter number of rows and columns of second matrix: ");
    scanf("%d %d", &r2, &c2);

    // Check condition for addition
    if(r1 != r2 || c1 != c2) {
        printf("Matrix addition not possible! (sizes must be same)\n");
        return 0;
    }

    // Input first matrix
    printf("Enter elements of first matrix (%dx%d):\n", r1, c1);
    for(i = 0; i < r1; i++) {
        for(j = 0; j < c1; j++) {
            scanf("%d", &mat1[i][j]);
        }
    }

    // Input second matrix
    printf("Enter elements of second matrix (%dx%d):\n", r2, c2);
    for(i = 0; i < r2; i++) {
        for(j = 0; j < c2; j++) {
            scanf("%d", &mat2[i][j]);
        }
    }

    // Add both matrices
    for(i = 0; i < r1; i++) {
        for(j = 0; j < c1; j++) {
            sum[i][j] = mat1[i][j] + mat2[i][j];
        }
    }

    // Print result
    printf("\nSum of both matrices:\n");
    for(i = 0; i < r1; i++) {
        for(j = 0; j < c1; j++) {
            printf("%d ", sum[i][j]);
        }
        printf("\n");
    }

    return 0;
}


    
